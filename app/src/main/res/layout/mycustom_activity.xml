<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.admin.myapplication_app.progressbar.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android my text view "
        android:textSize="16dp" />

    <com.example.admin.myapplication_app.progressbar.MyProgressCircle
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.example.admin.myapplication_app.progressbar.MyTickMark
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <com.example.admin.myapplication_app.progressbar.MyLineIndicator
        android:id="@+id/my_line_indicator"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <com.example.admin.myapplication_app.custom.CustomBulletView
        android:layout_width="200dp"
        android:layout_height="40dp" />

    <com.example.admin.myapplication_app.custom.BulletViewParent
        android:id="@+id/bullet_parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"></com.example.admin.myapplication_app.custom.BulletViewParent>

</LinearLayout>